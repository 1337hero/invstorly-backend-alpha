{
  "output": {
    "filePath": "repo-output.txt",
    "style": "plain",
    "removeComments": false,
    "removeEmptyLines": true,
    "showLineNumbers": false,
    "topFilesLength": 0
  },
  "include": [
    "**/*"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "node_modules/",
      "vendor/",
      "storage/*",
      "bootstrap/cache/",
      "public/build/",
      "public/hot",
      ".env*",
      ".idea/",
      ".vscode/",
      ".git/",
      "*.log",
      "*.bak",
      "repomix.config.json"
    ]
  }
}
